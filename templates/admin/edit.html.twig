{% extends 'base.html.twig' %}

{% block title %}Modifier Sweat-shirt{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Modifier le Sweat-shirt : {{ sweatshirt.name }}</h1>

    {{ form_start(form) }}

        <div class="mb-3">
            {{ form_label(form.name) }}
            {{ form_widget(form.name, { attr: { class: 'form-control' } }) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.price) }}
            {{ form_widget(form.price, { attr: { class: 'form-control' } }) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.image) }}
            {{ form_widget(form.image, { attr: { class: 'form-control' } }) }}
        </div>

        <div class="form-check form-switch mb-4">
            {{ form_widget(form.isFeatured, { attr: { class: 'form-check-input' } }) }}
            {{ form_label(form.isFeatured, null, { label_attr: { class: 'form-check-label' } }) }}
        </div>

        <h4 class="mt-4">Stock par taille</h4>
        <div class="row">
            {% for size in ['XS', 'S', 'M', 'L', 'XL'] %}
                <div class="col-md-2 mb-3">
                    <label class="form-label" for="stock_{{ size }}">{{ size }}</label>
                    <input type="number"
                           id="stock_{{ size }}"
                           name="stock[{{ size }}]"
                           value="{{ sweatshirt.stock[size]|default(0) }}"
                           class="form-control"
                           min="0">
                </div>
            {% endfor %}
        </div>

        <button class="btn btn-primary mt-3">üíæ Enregistrer</button>

    {{ form_end(form) }}

    <a href="{{ path('admin') }}" class="btn btn-link mt-3">‚¨ÖÔ∏è Retour √† la liste</a>
</div>
{% endblock %}
