{% extends 'base.html.twig' %}

{% block title %}{{ sweatshirt.name }}{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-6">
            {% if sweatshirt.image %}
                <img src="{{ asset('images/' ~ sweatshirt.image) }}" alt="{{ sweatshirt.name }}" class="img-fluid mb-4">
            {% endif %}
        </div>
        <div class="col-md-6">
            <h2>{{ sweatshirt.name }}</h2>
            <p><strong>{{ sweatshirt.price }} €</strong></p>

            <form method="post" action="{{ path('add_to_cart', {'id': sweatshirt.id}) }}">
                <div class="mb-3">
                    <label for="size" class="form-label">Taille</label>
                    <select name="size" id="size" class="form-select" required>
                        <option value="">-- Choisir une taille --</option>
                        <option value="XS">XS</option>
                        <option value="S">S</option>
                        <option value="M">M</option>
                        <option value="L">L</option>
                        <option value="XL">XL</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="quantity" class="form-label">Quantité</label>
                    <input type="number" name="quantity" id="quantity" class="form-control" value="1" min="1">
                </div>
                <div class="d-flex justify-content-between mt-3">
                    <button type="submit" class="btn btn-primary">Ajouter au panier</button>
                    <a href="{{ backUrl }}" class="btn btn-outline-secondary float-end">← Retour</a>
                </div>

            </form>
        </div>
    </div>
</div>
{% endblock %}
